<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.rohal.mantra.FragmentSignUp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg"
        android:fitsSystemWindows="true"
        android:isScrollContainer="false"
        xmlns:fresco="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:id="@+id/main"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/btn_back"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_left_arrow_white"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/top_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    fresco:roundingBorderWidth="1dp"
                    android:background="@drawable/ic_camera_white"
                    fresco:roundingBorderColor="@color/white"
                    fresco:roundingBorderPadding="2dp"
                    fresco:roundAsCircle="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="150dp"
                android:layout_below="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtSignUpUsername"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_userprofile_orange"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/txtUsername"
                    android:textColorHint="@color/ligtWhite"
                    android:textColor="@color/white"
                    android:inputType="text"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txtSignUpUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/blue"/>
                <EditText
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="65dp"
                    android:id="@+id/txtSignUpEmialAddress"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_email_orange"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/txtEmialAddress"
                    android:textColorHint="@color/ligtWhite"
                    android:textColor="@color/white"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txtSignUpEmialAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>
                <EditText
                    android:inputType="textPassword"
                    android:layout_marginTop="125dp"
                    android:id="@+id/txtSignUpPassword"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_password_orange"
                    android:drawablePadding="15dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/Password"
                    android:textColorHint="@color/ligtWhite"
                    android:textColor="@color/white"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txtSignUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>
                <EditText
                    android:inputType="textPassword"
                    android:layout_marginTop="185dp"
                    android:id="@+id/txtSignUpConfirmPassword"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_password_orange"
                    android:drawablePadding="15dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/ConfirmPassword"
                    android:textColorHint="@color/ligtWhite"
                    android:textColor="@color/white"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txtSignUpConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>
                <Button
                    android:id="@+id/btnSignUp"
                    android:textColor="@color/orange"
                    android:layout_marginTop="260dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_cornor_round"/>
            </RelativeLayout>
            <TextView
                android:autoLink="all"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:id="@+id/yess"
                android:linksClickable="true"
                android:layout_marginTop="60dp"
                android:textSize="10sp"
                android:layout_below="@id/layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>