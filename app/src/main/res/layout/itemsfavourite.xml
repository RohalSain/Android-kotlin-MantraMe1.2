<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/shadow"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_below="@+id/btnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/status"
        android:background="#b4b3b3"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dashBoardRecyclerViewBackgroundFavourite"
            android:background="@drawable/ic_home_screen_image_placeholder"/>
        <TextView
            android:id="@+id/textFavourite"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/settingkey"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dot_menu_grey"/>
        </LinearLayout>
        </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/status"
        android:id="@+id/options"
        android:background="#cbcaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="12sp"
                android:id="@+id/favouritekey"
                android:paddingLeft="22dp"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Favourite"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_selected_favorite_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="12sp"
                android:id="@+id/Reflectionkey"
                android:paddingLeft="22dp"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Reflection"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_refection_grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="12sp"
                android:id="@+id/Sharekey"
                android:paddingLeft="22dp"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Share"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_share_grey"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>